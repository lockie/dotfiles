[bar/top]
inherit = bar
bottom = false
tray-position = right
tray-detached = false
tray-padding = 2
modules-left = uname RightArrow uptime RightArrowAlt temperature fan nvidia cpu RightArrow procs RightArrowAlt mem swap membar RightArrow hddtemp io RightArrowAlt network RightArrow fslabel filesystem RightArrowAlt mail RightArrow
modules-center =
modules-right = LeftArrow
background = ${colors.background-alt}
tray-background = ${colors.background}


[module/uname]
type = custom/script
exec = uname -rn | sed  's/ /%{F#9fafaf}@%{F-}/'
label = %output:24%
tail = false
interval = 104729
label-padding = 1
format-background = ${colors.background}


[module/uptime]
type = custom/script
exec = uptime -p | cut -d ' ' -f 2,3 | tr -d ,
label = %output:0:10%
format-prefix = "↑"
format-prefix-foreground = ${colors.foreground-alt}
tail = false
interval = 59
format-background = ${colors.background-alt}
format-padding = 1


[module/temperature]
type = internal/temperature
interval = 2
thermal-zone = 0
warn-temperature = 60
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-warn = <label-warn>
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}
format-padding = 1
format-background = ${colors.background}


[module/fan]
type = custom/script
exec = cat /sys/devices/platform/it87.656/hwmon/hwmon1/fan1_input
label = %output:4%
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
tail = false
interval = 2
format-background = ${colors.background}


[module/nvidia]
type = custom/script
exec = nvidia-settings -t -q gpucoretemp | head -n1
label = %output:3%°C
tail = false
interval = 13
label-padding = 1
format-background = ${colors.background}


